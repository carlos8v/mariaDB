<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <title>Painel</title>
    <%- include('partials/switch.ejs') %>
  </head>
  <body class="bg-zinc-100 min-h-full min-h-screen">
    <main class="mx-auto w-full max-w-7xl py-4 px-4 3xl:px-0">
      <h1 class="text-black text-3xl font-medium mb-6">Usu√°rio</h1>
      <section
        class="bg-white p-4 rounded shadow border border-zinc-300 text-center mb-6"
      >
        <img
          src="<%= user.photoUrl ? user.photoUrl : `https://ui-avatars.com/api/?name=${user.name.replace(/\s/g, '+')}`%>"
          class="rounded-full w-32 mb-4 mx-auto"
        />
        <h3 class="text-xl"><%= user.name %></h3>
        <p class="text-zinc-600 font-medium">@<%= user.username %></p>
      </section>
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-black text-3xl font-medium">Meus links</h1>
        <button
          class="border border-zinc-400 rounded-full px-4 py-2 cursor-pointer"
        >
          Adicionar
        </button>
      </div>
      <section class="flex flex-col gap-4">
        <% links.forEach(function (link) { %>
        <article class="bg-white p-4 rounded shadow border border-zinc-300">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-medium">
              <span><%= link.title %></span>
              <button
                class="inline-flex items-center justify-center p-1 cursor-pointer"
              >
                <i data-feather="edit" class="inline w-4 h-4"></i>
              </button>
            </h3>
            <button
              is="custom-switch"
              aria-checked="<%= link.visible ? 'true' : 'false' %>"
            ></button>
          </div>
          <label for="<%= link.id %>" class="block text-sm text-zinc-800 mb-1"
            >URL</label
          >
          <input
            id="<%= link.id %>"
            type="url"
            value="<%= link.link %>"
            readonly
            class="px-4 py-2 border border-zinc-300 bg-zinc-100 rounded w-full"
          />
        </article>
        <% }) %>
      </section>
    </main>
    <script>
      feather.replace();
    </script>
  </body>
</html>
