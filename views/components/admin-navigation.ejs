<section class="bg-white rounded border border-zinc-300 p-2 mb-6">
  <div class="w-full md:w-fit flex flex-col md:flex-row items-center gap-2">
    <a
      id="dashboard"
      href="/admin?tab=dashboard"
      class="w-full md:w-fit cursor-pointer py-2 px-2 md:px-4 rounded flex items-center justify-start md:justify-center transition"
    >
      <i data-feather="monitor" class="w-5 h-5 mr-2"></i>
      Dashboard
    </a>
    <a
      id="logs"
      href="/admin?tab=logs"
      class="w-full md:w-fit cursor-pointer py-2 px-2 md:px-4 rounded flex items-center justify-start md:justify-center transition"
    >
      <i data-feather="layers" class="w-5 h-5 mr-2"></i>
      Logs do sistema
    </a>
    <a
      id="settings"
      href="/admin?tab=settings"
      class="w-full md:w-fit cursor-pointer py-2 px-2 md:px-4 rounded flex items-center justify-start md:justify-center transition"
    >
      <i data-feather="settings" class="w-5 h-5 mr-2"></i>
      Configurações
    </a>
  </div>
  <script>
    const url = new URL(window.location);
    const availableTabs = new Set(["dashboard", "logs", "settings"]);

    const searchTab = url.searchParams.get("tab");
    let currentTab = availableTabs.has(searchTab) ? searchTab : "dashboard";

    const active = "text-white bg-indigo-500 hover:bg-indigo-600";
    const inactive = "text-zinc-800 bg-transparent hover:bg-zinc-200";

    const dashboardTab = document.querySelector("#dashboard");
    const logsTab = document.querySelector("#logs");
    const settingsTab = document.querySelector("#settings");

    const tabs = [dashboardTab, logsTab, settingsTab];

    function updateHeaderTabs() {
      for (const tab of tabs) {
        if (tab.id === currentTab) {
          tab.classList.add(...active.split(" "));
          continue;
        }

        tab.classList.add(...inactive.split(" "));
      }
    }

    updateHeaderTabs();
  </script>
</section>
