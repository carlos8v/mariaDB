<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <title><%= user.name %></title>
    <style>
      body {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32' width='32' height='32' fill='none' stroke='rgb(255 255 255 / 0.05)'%3e%3cpath d='M0 .5H31.5V32'/%3e%3c/svg%3e");
      }
    </style>
  </head>
  <body
    class="bg-zinc-950 text-white min-h-full min-h-screen flex flex-col justify-center items-center"
  >
    <section class="mb-8 w-full max-w-2xl">
      <img
        src="<%= user.photoUrl ? user.photoUrl : `https://ui-avatars.com/api/?name=${user.name.replace(/\s/g, '+')}`%>"
        class="rounded-full w-32 mb-4 mx-auto"
      />
      <p class="text-center">
        <span class="font-medium"><%= user.name %></span>
        <br />
        <span class="font-thin"><%= user.title %></span>
      </p>
    </section>
    <section class="w-full max-w-md px-5">
      <% links.forEach(function (link) { %>
      <a
        href="<%= link.link %>"
        class="w-full block text-center border border-white group mb-6 cursor-pointer"
      >
        <div
          class="w-full block px-4 py-2 w-full bg-white text-black group-hover:-translate-y-[10px] group-hover:-translate-x-[8px] group-hover transition ease-out"
        >
          <%= link.title %>
        </div>
      </a>
      <% }) %>
    </section>
  </body>
</html>
